/* pages/index/index.wxss */
.controlContainer {
  display: flex;
  flex-direction: row;
  width: 1000rpx;
  height: 768rpx;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: flex-start;
}

.controlItem {
  display: flex;
  flex-direction: column;
  width: 50rpx;
  flex-wrap: nowrap;
}

.controlSlider {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 80%;
  padding-top: 20rpx;
  position:relative;
}

.sliderMarks {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 25%;
  height: 100%;
}

.mark {
  width: 90%;
  height: 68rpx;
  font-size: 10rpx;
  padding-left: 10rpx;
  vertical-align: middle;
}

.muteButton {
  width: 90%;
  height: 20%;
  font-size: 10rpx;
  vertical-align: middle;
}

.sliderLineCanvas {
  width: 80rpx; 
  height: 600rpx;
  z-index: -1; 
  
}

.sliderButton {
  height: 15rpx;
  z-index: 0; 
  transform: scale(1.8);
  position: absolute;
  background-color: rgb(153, 150, 150);
  opacity: 0.5;
}